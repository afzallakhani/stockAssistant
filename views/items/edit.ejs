<% layout('layout/boilerplate') %>

    <div class="container my-4">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-warning text-dark text-center py-3 rounded-top">
                <h4 class="mb-0 fw-semibold">
                    <i class="bi bi-pencil-square"></i> Edit Item
                </h4>
            </div>

            <div class="card-body">
                <form action="/items/<%= item._id %>?_method=PUT" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
                    <!-- ===== Item Details ===== -->
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="name" class="form-label">Item Name</label>
                            <input type="text" id="name" name="item[itemName]" class="form-control" value="<%= item.itemName %>" required />
                        </div>

                        <div class="col-md-6">
                            <label for="description" class="form-label">Description</label>
                            <input type="text" id="description" name="item[itemDescription]" class="form-control" value="<%= item.itemDescription %>" required />
                        </div>
                    </div>

                    <!-- ===== Quantity & Unit ===== -->
                    <div class="row g-3 mt-2">
                        <div class="col-md-4">
                            <label for="unit" class="form-label">Quantity Unit</label>
                            <select class="form-select" name="item[itemUnit]" id="unit" required>
              <option selected><%= item.itemUnit %></option>
              <option value="NOS">NOS</option>
              <option value="PCS">PCS</option>
              <option value="BOX">BOX</option>
              <option value="KGS">KGS</option>
              <option value="MTS">MTS</option>
              <option value="BAGS">BAGS</option>
              <option value="SETS">SETS</option>
              <option value="MTRS">MTRS</option>
            </select>
                        </div>

                        <div class="col-md-4">
                            <label for="quantity" class="form-label">Quantity</label>
                            <input type="number" id="quantity" name="item[itemQty]" class="form-control" value="<%= item.itemQty %>" required />
                        </div>

                        <div class="col-md-4">
                            <label for="life" class="form-label">Daily Consumption</label>
                            <input type="text" id="life" name="item[life]" class="form-control" value="<%= item.life %>" placeholder="e.g., 1 HEAT, 5 HEATS, 1 DAY" />
                        </div>
                    </div>

                    <!-- ===== Category & Supplier (Aligned) ===== -->
                    <div class="row g-3 mt-3 align-items-end">
                        <!-- Category -->
                        <div class="col-md-8">
                            <label for="category" class="form-label">Item Category</label>
                            <div class="input-group">
                                <select class="form-select" id="category" name="item[itemCategoryName]" required>
                <option selected><%= item.itemCategoryName %></option>
                <% for (let category of itemCategories) { %>
                <option><%= category.itemCategoryName %></option>
                <% } %>
              </select>
                                <button type="button" class="btn btn-outline-secondary px-3" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
                <i class="bi bi-plus-lg"></i>
              </button>
                            </div>
                        </div>

                        <!-- Supplier -->
                        <div class="col-md-4">
                            <label for="supplierName" class="form-label">Item Supplier</label>
                            <div class="input-group">
                                <input id="supplierName" name="item[itemSupplier]" type="text" class="form-control awesomplete" autocomplete="off" value="<%= item.itemSupplier %>"> <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal"
                                    data-bs-target="#addSupplierModal">
        <i class="bi bi-plus"></i>
    </button>
                            </div>


                            <ul id="supplierList" class="d-none">
                                <% for (let supplier of itemSuppliers) { %>
                                    <li>
                                        <%= supplier.supplierName.trim() %> (
                                            <%= supplier.supplierCity.trim() %>)</li>
                                    <% } %>
                            </ul>


                        </div>
                    </div>

                    <!-- ===== Current Images ===== -->
                    <div class="mt-4">
                        <label class="form-label">Current Images</label>
                        <div class="d-flex flex-wrap gap-3">
                            <% if (item.itemImage.length > 0) { %>
                                <% item.itemImage.forEach(img => { %>
                                    <div class="text-center border rounded p-2 shadow-sm bg-light">
                                        <img src="data:image/<%= img.contentType %>;base64,<%= img.data.toString('base64') %>" alt="<%= img.name %>" class="img-thumbnail zoomable" style="width:120px; height:120px; object-fit:contain; cursor:zoom-in;" />
                                        <div class="mt-2 d-flex justify-content-center gap-2">
                                            <a href="data:image/<%= img.contentType %>;base64,<%= img.data.toString('base64') %>" download="<%= img.name %>" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-download"></i>
                                            </a>
                                            <label class="form-check-label text-danger small">
                  <input type="checkbox" name="deleteImages[]" value="<%= img._id %>" />
                  Delete
                </label>
                                        </div>
                                    </div>
                                    <% }) %>
                                        <% } else { %>
                                            <p class="text-muted">No images uploaded.</p>
                                            <% } %>
                        </div>
                    </div>

                    <!-- ===== Upload New Images ===== -->
                    <div class="mt-3">
                        <label for="image" class="form-label">Add / Replace Images</label>
                        <input type="file" id="image" name="item[itemImage]" class="form-control" multiple />
                        <small class="text-muted">
            You can delete specific old images above or upload new ones to add / replace.
          </small>
                    </div>

                    <!-- ===== Submit Button ===== -->
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-success px-4 py-2 fw-semibold" onclick="return confirm('Save changes?')">
            <i class="bi bi-save"></i> Update Item
          </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- ===== Modal: Add New Category ===== -->
    <div class="modal fade" id="addCategoryModal" tabindex="-1" aria-labelledby="addCategoryModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-sm">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="addCategoryModalLabel">
                        <i class="bi bi-tags"></i> Add New Category
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- <form action="/items/category" method="POST" novalidate>
                        <label for="newItemCategory" class="form-label">Category Name</label>
                        <input type="text" class="form-control" id="newItemCategory" name="category[itemCategoryName]" required />
                        <div class="text-end mt-3">
                            <button type="submit" class="btn btn-success">
              <i class="bi bi-check2-circle"></i> Add
            </button>
                        </div>
                    </form> -->
                    <form id="addCategoryForm">
                        <label class="form-label">Category Name</label>
                        <input type="text" class="form-control" id="newCategoryInput" required>
                        <div class="text-end mt-3">
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
    <!-- Add Supplier Modal -->
    <div class="modal fade" id="addSupplierModal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Add Supplier</h5>
                    <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <form id="addSupplierForm">
                        <label class="form-label">Supplier Name</label>
                        <input type="text" id="supName" class="form-control" required>

                        <label class="form-label mt-2">City</label>
                        <input type="text" id="supCity" class="form-control" required>

                        <label class="form-label mt-2">State</label>
                        <input type="text" id="supState" class="form-control" required>

                        <div class="text-end mt-3">
                            <button class="btn btn-success">Save Supplier</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>


    <!-- ===== Image Preview Modal ===== -->
    <div class="modal fade" id="imageModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-fullscreen">
            <div class="modal-content bg-dark">
                <div class="modal-body p-0 text-center">
                    <img id="modalImage" class="img-fluid" style="max-height:95vh;" />
                </div>
            </div>
        </div>
    </div>

    <!-- ===== Awesomplete ===== -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/awesomplete/1.1.5/awesomplete.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/awesomplete/1.1.5/awesomplete.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {

            /* -----------------------
               A W E S O M P L E T E
            ------------------------ */
            const input = document.getElementById("supplierName");
            const listItems = Array.from(document.querySelectorAll("#supplierList li"))
                .map(li => li.textContent.trim());

            new Awesomplete(input, {
                list: listItems,
                minChars: 1,
                autoFirst: true
            });

            /* -----------------------
               ADD CATEGORY (AJAX)
            ------------------------ */
            document.getElementById("addCategoryForm").addEventListener("submit", async function(e) {
                e.preventDefault();

                const categoryName = document.getElementById("newCategoryInput").value;

                const res = await fetch("/items/category/ajax", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({
                        itemCategoryName: categoryName
                    })
                });

                const data = await res.json();

                if (data.success) {
                    const select = document.getElementById("category");
                    const opt = document.createElement("option");
                    opt.textContent = data.category.itemCategoryName;
                    select.appendChild(opt);
                    select.value = data.category.itemCategoryName;

                    bootstrap.Modal.getInstance(document.getElementById("addCategoryModal")).hide();
                }
            });

            /* -----------------------
               ADD SUPPLIER (AJAX)
            ------------------------ */
            document.getElementById("addSupplierForm").addEventListener("submit", async function(e) {
                e.preventDefault();
                console.log("SUPPLIER AJAX CLICKED"); // ADD THIS

                const payload = {
                    supplierName: document.getElementById("supName").value,
                    supplierCity: document.getElementById("supCity").value,
                    supplierState: document.getElementById("supState").value
                };

                const res = await fetch("/supplier/ajax", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify(payload)
                });

                const data = await res.json();

                if (data.success) {
                    document.getElementById("supplierName").value = data.supplier.supplierName;

                    bootstrap.Modal.getInstance(document.getElementById("addSupplierModal")).hide();
                }
            });

        });
    </script>


    <style>
        body {
            background-color: #f8f9fa;
        }
        
        .card {
            border-radius: 12px;
        }
        
        label {
            font-weight: 500;
        }
        
        .form-control,
        .form-select {
            border-radius: 8px;
        }
        
        .awesomplete>ul {
            width: 100% !important;
            border: 1px solid #ced4da;
            border-radius: 0.375rem;
            background-color: #fff;
            z-index: 2000;
        }
        
        .awesomplete mark {
            background: transparent;
            font-weight: 600;
        }
        
        @media (max-width: 768px) {
            .card-body {
                padding: 1rem !important;
            }
        }
    </style>