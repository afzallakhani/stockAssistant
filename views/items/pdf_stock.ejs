<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Stock Report</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 12px;
        }
        
        h2 {
            text-align: center;
            margin-bottom: 10px;
        }
        
        table {
            width: 100%;
            border-collapse: collapse;
        }
        
        th,
        td {
            border: 1px solid #999;
            padding: 6px;
            text-align: left;
        }
        
        th {
            background: #222;
            color: #fff;
        }
    </style>
</head>

<body>
    <h2>Stock Report -
        <%= category || 'All Categories' %> /
            <%= supplier || 'All Suppliers' %>
    </h2>
    <table>
        <thead>
            <tr>
                <th>Item</th>
                <th>Category</th>
                <th>Supplier</th>
                <th>Current Stock</th>
            </tr>
        </thead>
        <tbody>
            <% items.forEach(function(i){ %>
                <tr>
                    <td>
                        <%= i.itemName %>
                    </td>
                    <td>
                        <%= i.itemCategoryName %>
                    </td>
                    <td>
                        <%= i.itemSupplier %>
                    </td>
                    <td>
                        <%= i.itemQty %>
                            <%= i.itemUnit || '' %>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</body>

</html>