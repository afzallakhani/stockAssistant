<% layout('layout/boilerplate') %>
    <% for (let searchedItem of item){%>
        <div class="col-3">
            <% for(let image of searchedItem.itemImage) {%>
                <img src="data:image/<%=image.contentType%>;base64,
                <%=image.data.toString('base64')%>" class="img-fluid" style="height: 300px; max-width: 300px;">
                <% }%>
        </div>
        <div class="col-9 my-auto">
            <h5 class="card-title">
                <%= searchedItem.itemName %>
            </h5>
            <p class="card-text">
                <%= searchedItem.itemQty %>
                    <%= searchedItem.itemUnit %>
            </p>
            <p class="card-text">
                <%= searchedItem.itemDescription %>
            </p>
            <p class="card-text">
                <small class="text-muted"><%= searchedItem.itemCategoryName %> </small>
            </p>
            <p class="card-text">
                <small class="text-muted"><%= searchedItem._id %> </small>
            </p>
            <a href="/items/<%= searchedItem._id %>/edit " class="btn  btn-warning mb-1">Edit</a>
            <!-- <a href="" class="d-inline" method="POST" onclick="return confirm('Are you sure you want to edit this item?')" class="btn  btn-danger mb-1 ">Delete</a> -->
            <form action="/items/<%= searchedItem._id %>?_method=DELETE" method="post">
                <button type="submit" onclick="return confirm('Are you sure you want to edit this item?')" class="btn btn-danger d-inline mb-1">DELETE</button>
            </form>
            <%} %>