<% layout('layout/boilerplate') %>

    <div class="container my-4">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white text-center py-3 rounded-top">
                <h4 class="mb-0 fw-semibold">
                    <i class="bi bi-box-seam"></i> Add New Item to Inventory
                </h4>
            </div>

            <div class="card-body">
                <form action="/items" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">

                    <!-- DATE + ITEM DETAILS -->
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Date</label>
                            <input type="date" class="form-control" id="itemDate" name="item[createdAt]" required>
                        </div>

                        <div class="col-md-8">
                            <label class="form-label">Item Name</label>
                            <input type="text" class="form-control" name="item[itemName]" required>
                        </div>

                        <div class="col-12">
                            <label class="form-label">Description</label>
                            <input type="text" class="form-control" name="item[itemDescription]" required>
                        </div>
                    </div>

                    <!-- QTY + UNIT -->
                    <div class="row g-3 mt-2">
                        <div class="col-md-4">
                            <label class="form-label">Quantity Unit</label>
                            <select class="form-select" name="item[itemUnit]" required>
                            <option disabled selected>Select Unit</option>
                            <option value="NOS">NOS</option>
                            <option value="PCS">PCS</option>
                            <option value="BOX">BOX</option>
                            <option value="KGS">KGS</option>
                            <option value="MTS">MTS</option>
                            <option value="BAGS">BAGS</option>
                            <option value="SETS">SETS</option>
                            <option value="MTRS">MTRS</option>
                        </select>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Quantity</label>
                            <input type="number" class="form-control" name="item[itemQty]" required>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Daily Consumption</label>
                            <input type="text" class="form-control" name="item[life]" placeholder="e.g. 1 HEAT, 5 HEATS">
                        </div>
                    </div>

                    <!-- CATEGORY + SUPPLIER -->
                    <div class="row g-3 mt-3 align-items-end">

                        <!-- CATEGORY -->
                        <div class="col-md-8">
                            <label class="form-label">Item Category</label>
                            <div class="input-group">
                                <select class="form-select" id="category" name="item[itemCategoryName]" required>
                                <option disabled selected>Select Category</option>
                                <% itemCategories.forEach(cat => { %>
                                    <option><%= cat.itemCategoryName %></option>
                                <% }) %>
                            </select>

                                <!-- OPEN CATEGORY MODAL -->
                                <button class="btn btn-outline-secondary" type="button" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
                                <i class="bi bi-plus-lg"></i>
                            </button>
                            </div>
                        </div>

                        <!-- SUPPLIER -->
                        <div class="col-md-4">
                            <label class="form-label">Item Supplier</label>
                            <div class="input-group">
                                <input id="supplierName" type="text" name="item[itemSupplier]" class="form-control awesomplete" autocomplete="off">

                                <!-- OPEN SUPPLIER MODAL -->
                                <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#addSupplierModal">
                                <i class="bi bi-plus"></i>
                            </button>
                            </div>

                            <ul id="supplierList" class="d-none">
                                <% itemSuppliers.forEach(sup => { %>
                                    <li>
                                        <%= sup.supplierName.trim() %> (
                                            <%= sup.supplierCity %>)</li>
                                    <% }) %>
                            </ul>
                        </div>
                    </div>

                    <!-- IMAGE -->
                    <div class="mt-3">
                        <label class="form-label">Upload Images</label>
                        <input type="file" class="form-control" name="item[itemImage]" multiple>
                    </div>

                    <div class="text-center mt-4">
                        <button class="btn btn-success px-4 py-2 fw-semibold">
                        <i class="bi bi-save"></i> Save Item
                    </button>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <!-- CATEGORY MODAL -->
    <div class="modal fade" id="addCategoryModal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5>Add Category</h5>
                    <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <form id="addCategoryForm">
                        <label class="form-label">Category Name</label>
                        <input type="text" id="newCategoryInput" class="form-control" required>

                        <div class="text-end mt-3">
                            <button class="btn btn-success">Save</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <!-- SUPPLIER MODAL -->
    <div class="modal fade" id="addSupplierModal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header bg-primary text-white">
                    <h5>Add Supplier</h5>
                    <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <form id="addSupplierForm">
                        <label class="form-label">Supplier Name</label>
                        <input type="text" id="supName" class="form-control" required>

                        <label class="form-label mt-2">City</label>
                        <input type="text" id="supCity" class="form-control" required>

                        <label class="form-label mt-2">State</label>
                        <input type="text" id="supState" class="form-control" required>

                        <div class="text-end mt-3">
                            <button class="btn btn-success">Save Supplier</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <!-- AWESOMPLETE -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/awesomplete/1.1.5/awesomplete.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/awesomplete/1.1.5/awesomplete.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", () => {

            // Set today date automatically
            document.getElementById("itemDate").value = new Date().toISOString().split("T")[0];

            // AWESOMPLETE supplier search
            const input = document.getElementById("supplierName");
            const listItems = Array.from(document.querySelectorAll("#supplierList li"))
                .map(li => li.textContent.trim());
            new Awesomplete(input, {
                list: listItems,
                minChars: 1
            });

            /* =======================
               ADD CATEGORY (AJAX)
            ======================= */
            document.getElementById("addCategoryForm").addEventListener("submit", async e => {
                e.preventDefault();

                const name = document.getElementById("newCategoryInput").value;

                const res = await fetch("/items/category/ajax", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({
                        itemCategoryName: name
                    })
                });

                const data = await res.json();

                if (data.success) {
                    const select = document.getElementById("category");
                    const opt = document.createElement("option");
                    opt.textContent = data.category.itemCategoryName;
                    select.appendChild(opt);
                    select.value = data.category.itemCategoryName;

                    bootstrap.Modal.getInstance(document.getElementById("addCategoryModal")).hide();
                }
            });


            /* =======================
               ADD SUPPLIER (AJAX)
            ======================= */
            document.getElementById("addSupplierForm").addEventListener("submit", async e => {
                e.preventDefault();

                const payload = {
                    supplierName: document.getElementById("supName").value,
                    supplierCity: document.getElementById("supCity").value,
                    supplierState: document.getElementById("supState").value
                };

                const res = await fetch("/supplier/ajax", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify(payload)
                });

                const data = await res.json();

                if (data.success) {
                    document.getElementById("supplierName").value = data.supplier.supplierName;

                    bootstrap.Modal.getInstance(document.getElementById("addSupplierModal")).hide();
                }
            });

        });
    </script>

    <style>
        body {
            background-color: #f8f9fa;
        }
        
        .card {
            border-radius: 12px;
        }
        
        label {
            font-weight: 500;
        }
        
        .form-control,
        .form-select {
            border-radius: 8px;
        }
        
        .awesomplete>ul {
            width: 100% !important;
            border: 1px solid #ced4da;
            border-radius: 0.375rem;
            background-color: #fff;
            z-index: 2000;
        }
        
        .awesomplete mark {
            background: transparent;
            font-weight: 600;
        }
        
        @media (max-width: 768px) {
            .card-body {
                padding: 1rem !important;
            }
        }
    </style>