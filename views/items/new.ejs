<% layout('layout/boilerplate') %>

    <div class="container my-4">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white text-center py-3 rounded-top">
                <h4 class="mb-0 fw-semibold">
                    <i class="bi bi-box-seam"></i> Add New Item to Inventory
                </h4>
            </div>

            <div class="card-body">
                <form action="/items" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">

                    <!-- ===== Date & Item Details ===== -->
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label for="itemDate" class="form-label">Date</label>
                            <input type="date" class="form-control" id="itemDate" name="item[createdAt]" required>
                        </div>
                        <div class="col-md-8">
                            <label for="name" class="form-label">Item Name</label>
                            <input type="text" class="form-control" id="name" name="item[itemName]" placeholder="Enter item name" required>
                        </div>
                        <div class="col-12">
                            <label for="description" class="form-label">Description</label>
                            <input type="text" class="form-control" id="description" name="item[itemDescription]" placeholder="Enter item description" required>
                        </div>
                    </div>

                    <!-- ===== Quantity & Unit ===== -->
                    <div class="row g-3 mt-2">
                        <div class="col-md-4">
                            <label for="unit" class="form-label">Quantity Unit</label>
                            <select class="form-select" name="item[itemUnit]" id="unit" required>
              <option disabled selected>Select Unit</option>
              <option value="NOS">NOS</option>
              <option value="PCS">PCS</option>
              <option value="BOX">BOX</option>
              <option value="KGS">KGS</option>
              <option value="MTS">MTS</option>
              <option value="BAGS">BAGS</option>
              <option value="SETS">SETS</option>
            </select>
                        </div>

                        <div class="col-md-4">
                            <label for="qty" class="form-label">Quantity</label>
                            <input type="number" class="form-control" id="qty" name="item[itemQty]" placeholder="e.g. 50" required>
                        </div>

                        <div class="col-md-4">
                            <label for="life" class="form-label">Daily Consumption</label>
                            <input type="text" class="form-control" id="life" name="item[life]" placeholder="e.g. 1 HEAT, 5 HEATS, 1 DAY">
                        </div>
                    </div>

                    <!-- ===== Category and Supplier (Aligned Fix) ===== -->
                    <div class="row g-3 mt-3 align-items-end">
                        <!-- Category Field -->
                        <div class="col-md-8">
                            <label for="category" class="form-label">Item Category</label>
                            <div class="input-group">
                                <select class="form-select" id="category" name="item[itemCategoryName]" required>
        <option disabled selected>Select Category</option>
        <% for (let category of itemCategories) { %>
          <option><%= category.itemCategoryName %></option>
        <% } %>
      </select>
                                <button type="button" class="btn btn-outline-secondary px-3" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
        <i class="bi bi-plus-lg"></i>
      </button>
                            </div>
                        </div>

                        <!-- Supplier Field -->
                        <div class="col-md-4">
                            <label for="supplierName" class="form-label">Item Supplier</label>
                            <div class="input-group">
                                <input id="supplierName" name="item[itemSupplier]" type="text" class="form-control awesomplete" placeholder="Type to search supplier..." autocomplete="off" required />
                                <a href="/supplier/new" target="_blank" class="btn btn-outline-primary px-3">
                                    <i class="bi bi-person-plus"></i>
                                </a>
                            </div>

                            <!-- Awesomplete suggestion list -->
                            <ul id="supplierList" class="d-none">
                                <% for (let supplier of itemSuppliers) { %>
                                    <li>
                                        <%= supplier.supplierName.trim() %> (
                                            <%= supplier.supplierCity.trim() %>)</li>
                                    <% } %>
                            </ul>
                        </div>
                    </div>


                    <!-- ===== File Upload ===== -->
                    <div class="mt-3">
                        <label for="image" class="form-label">Upload Item Image</label>
                        <input type="file" class="form-control" id="image" name="item[itemImage]" multiple>
                        <div class="form-text">You can upload multiple images (JPG, PNG supported).</div>
                    </div>

                    <!-- ===== Submit Button ===== -->
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-success px-4 py-2 fw-semibold">
            <i class="bi bi-save"></i> Save Item
          </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- ===== Modal: Add New Category ===== -->
    <div class="modal fade" id="addCategoryModal" tabindex="-1" aria-labelledby="addCategoryModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-sm">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="addCategoryModalLabel">
                        <i class="bi bi-tags"></i> Add New Category
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/items/category" method="POST" novalidate>
                        <label for="newItemCategory" class="form-label">Category Name</label>
                        <input type="text" class="form-control" id="newItemCategory" name="category[itemCategoryName]" required>
                        <div class="text-end mt-3">
                            <button type="submit" class="btn btn-success">
              <i class="bi bi-check2-circle"></i> Add
            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- ===== Awesomplete ===== -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/awesomplete/1.1.5/awesomplete.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/awesomplete/1.1.5/awesomplete.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Set todayâ€™s date automatically
            const today = new Date().toISOString().split('T')[0];
            document.getElementById("itemDate").value = today;

            // Setup Awesomplete for suppliers
            const input = document.getElementById("supplierName");
            const listItems = Array.from(document.querySelectorAll("#supplierList li")).map(li => li.textContent.trim());
            new Awesomplete(input, {
                list: listItems,
                minChars: 1,
                autoFirst: true,
                filter: (text, input) => text.toUpperCase().includes(input.toUpperCase()),
                item: (text, input) => {
                    const i = text.toUpperCase().indexOf(input.toUpperCase());
                    if (i >= 0) {
                        const prefix = text.substring(0, i);
                        const match = text.substring(i, i + input.length);
                        const suffix = text.substring(i + input.length);
                        const li = document.createElement("li");
                        li.innerHTML = `<span>${prefix}<strong>${match}</strong>${suffix}</span>`;
                        return li;
                    }
                    return Awesomplete.ITEM(text, input);
                }
            });

            input.addEventListener("awesomplete-selectcomplete", function() {
                this.value = this.value.trim();
            });
        });
    </script>

    <style>
        body {
            background-color: #f8f9fa;
        }
        
        .card {
            border-radius: 12px;
        }
        
        label {
            font-weight: 500;
        }
        
        .form-control,
        .form-select {
            border-radius: 8px;
        }
        
        .awesomplete>ul {
            width: 100% !important;
            border: 1px solid #ced4da;
            border-radius: 0.375rem;
            background-color: #fff;
            z-index: 2000;
        }
        
        .awesomplete mark {
            background: transparent;
            font-weight: 600;
        }
        
        @media (max-width: 768px) {
            .card-body {
                padding: 1rem !important;
            }
        }
    </style>