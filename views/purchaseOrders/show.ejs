<% layout('layout/boilerplate') %>

    <div class="container mt-4">

        <!-- HEADER -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h3 class="mb-0">PURCHASE ORDER</h3>
                <small class="text-muted">PO No: <%= po.poNumber %></small><br>
                <small class="text-muted">Date: <%= po.createdAt.toDateString() %></small>
            </div>

            <div>
                <a href="/purchase-orders/<%= po._id %>/pdf" class="btn btn-outline-dark">
        â¬‡ Download PDF
      </a>
            </div>
        </div>

        <!-- SUPPLIER -->
        <div class="card mb-3">
            <div class="card-body">
                <h6 class="mb-1">Supplier</h6>
                <strong><%= po.supplier.supplierName %></strong><br>
                <small>
        <%= po.supplier.supplierCity || "" %>
        <%= po.supplier.supplierState || "" %>
      </small>
            </div>
        </div>

        <!-- ITEMS TABLE -->
        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th style="width:5%">#</th>
                    <th>Item Description</th>
                    <th style="width:15%">Qty</th>
                    <th style="width:15%">Unit</th>
                </tr>
            </thead>
            <tbody>
                <% po.items.forEach((i, index) => { %>
                    <tr>
                        <td>
                            <%= index + 1 %>
                        </td>
                        <td>
                            <%= i.item.itemName %>
                        </td>
                        <td>
                            <%= i.quantity %>
                        </td>
                        <td>
                            <%= i.unit %>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>

        <!-- FOOTER -->
        <div class="mt-4">
            <p class="text-muted mb-1">
                * This is a system generated Purchase Order.
            </p>
        </div>

    </div>