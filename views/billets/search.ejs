<% layout('layout/boilerplate') %>
    <div class="container-fluid align-items-center justify-content-center mb-1">
        <h1 class="font-weight-bold mt-2">Search Results
        </h1>
    </div>
    <form action="/billets/search" class="mb-1" method="get">
        <label for="keyWord" class="d-inline mb-1 bi bi-search form-label fw-bold">  Search By Heat No.</label>

        <input class="form-control" type="search" id="keyWord" name="heat[heatNo]" placeholder="Search Another Heat" class="mt-2">


    </form>
    <a class="btn btn-primary mt-3 mb-2" href="/billets/new">Add New - Billet Inwards</a>

    <a class="btn btn-success mt-3 mb-2" href="/billets/newTc">Create New TC - Billet Outwards</a>


    <div class="table-responsive">
        <table class="table table-hover table align-middle text-center" id="dataTable">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Heat No.</th>
                    <th scope="col">Grade</th>
                    <th scope="col">Section Sq.</th>
                    <th scope="col">C %</th>
                    <th scope="col">Mn %</th>
                    <th scope="col">P %</th>
                    <th scope="col">S %</th>
                    <th scope="col">Si %</th>
                    <th scope="col">Cr %</th>
                    <th scope="col">Mo %</th>
                    <th scope="col">Ni %</th>
                    <th scope="col">Al %</th>
                    <th scope="col">Cu %</th>
                    <th scope="col">V %</th>
                    <th scope="col">Ce %</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% heats.forEach(function(heat, index){%>
                    <tr>
                        <td>
                            <%= index + 1 %>

                        </td>
                        <td>
                            <%= heat.heatNo %>
                        </td>
                        <td>
                            <%= heat.gradeName %>
                        </td>
                        <td>
                            <%= heat.sectionSize %>
                        </td>

                        <td>
                            <%= heat.c %>
                        </td>
                        <td>
                            <%= heat.mn %>
                        </td>
                        <td>
                            <%= heat.p %>
                        </td>
                        <td>
                            <%= heat.s %>
                        </td>
                        <td>
                            <%= heat.si %>
                        </td>
                        <td>
                            <%= heat.cr %>
                        </td>
                        <td>
                            <%= heat.mo %>
                        </td>
                        <td>
                            <%= heat.ni %>
                        </td>
                        <td>
                            <%= heat.al %>
                        </td>
                        <td>
                            <%= heat.cu %>
                        </td>
                        <td>
                            <%= heat.v %>
                        </td>
                        <td>
                            <%= heat.ce %>
                        </td>

                        <td>
                            <form action="/billets/<%= heat._id %>?_method=DELETE" method="post">
                                <button type="submit" onclick="return confirm('Are you sure you want to delete this item?')" class="btn btn-danger btn-sm d-inline mb-1 bi bi-trash"></button>
                                <a href="/billets/<%= heat._id %>/edit" class="btn btn-info btn-sm text-light mb-1 bi bi-pencil-square"></a>
                            </form>
                        </td>
                    </tr>
                    <%}) %>
            </tbody>
        </table>
    </div>