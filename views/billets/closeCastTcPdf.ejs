    <script>
        const generatePdfButton = document.getElementById('generatePdf');

        generatePdfButton.addEventListener('click', () => {
            const elementToConvert = document.getElementById('makePdf'); // Replace 'contentToConvert' with the ID of the HTML element you want to convert.

            html2pdf()
                .from(elementToConvert)
                .set({
                    margin: 0,
                })
                .save('generated.pdf');
        });
    </script>
    <script>
        function generatePDF() {
            const htmlContent = document.getElementById('html-content').innerHTML;

            const pdfDefinition = {
                content: [{
                    text: 'PDFMake Example',
                    fontSize: 18,
                    bold: true,
                    margin: [0, 0, 0, 20]
                }, {
                    text: htmlContent
                }]
            };

            pdfMake.createPdf(pdfDefinition).download('example.pdf');
        }
    </script>

