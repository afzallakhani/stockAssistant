<% layout('layout/boilerplate') %>

    <div class="container-fluid py-3">

        <!-- Header + Add Button -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="fw-bold mb-0">Supplier List</h2>
            <a class="btn btn-secondary" href="/supplier/new">+ Add New Supplier</a>
        </div>

        <!-- 🔍 Live Search Form -->
        <!-- 🔍 Search Bar -->
        <div class="mb-4">
            <form action="/supplier/result" method="get" id="searchForm" class="position-relative">
                <input type="text" id="searchInput" name="q" class="form-control form-control-lg shadow-sm w-100" placeholder="Search supplier by name, category, city, or state..." autocomplete="off" style="border-radius: 0.75rem; padding-left: 3rem;">
                <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y text-muted ms-3"></i>
            </form>

            <!-- Live suggestions dropdown -->
            <ul id="suggestions" class="list-group position-absolute w-100 shadow-sm mt-1" style="z-index: 1050; display: none; border-radius: 0.75rem; overflow: hidden;"></ul>
        </div>


        <!-- Supplier Cards -->
        <div class="row g-3">
            <% suppliers.forEach(function(supplier, index){ %>
                <div class="col-md-6 col-lg-4">
                    <div class="card border-0 shadow-sm rounded-3 h-100">
                        <div class="card-body">
                            <!-- Basic info always visible -->
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title fw-bold mb-1">
                                        <%= supplier.supplierName %>
                                    </h5>
                                    <p class="text-muted mb-0">
                                        <i class="bi bi-geo-alt"></i>
                                        <%= supplier.supplierCity %>,
                                            <%= supplier.supplierState %>
                                    </p>
                                </div>
                                <button class="btn btn-light border rounded-circle toggle-btn" type="button" data-bs-toggle="collapse" data-bs-target="#details-<%= supplier._id %>" aria-expanded="false" aria-controls="details-<%= supplier._id %>">
                    <i class="bi bi-chevron-down"></i>
                </button>
                            </div>

                            <!-- Collapsible details -->
                            <div class="collapse mt-3" id="details-<%= supplier._id %>">
                                <ul class="list-group list-group-flush small">
                                    <li class="list-group-item"><strong>Category:</strong>
                                        <%= supplier.supplierItemCategory || '-' %>
                                    </li>
                                    <li class="list-group-item"><strong>Phone:</strong>
                                        <%= supplier.supplierPhone || '-' %>
                                    </li>
                                    <li class="list-group-item"><strong>Email:</strong>
                                        <%= supplier.supplierEmail || '-' %>
                                    </li>
                                    <li class="list-group-item"><strong>GST:</strong>
                                        <%= supplier.supplierGst || '-' %>
                                    </li>
                                </ul>
                                <div class="mt-3 d-flex justify-content-end">
                                    <form action="/supplier/<%= supplier._id %>?_method=DELETE" method="post" class="me-2">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this supplier?')">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                                    </form>
                                    <a href="/supplier/<%= supplier._id %>/edit" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <!-- 🔽 Scripts -->
    <script>
        // Rotate arrow icon on toggle
        document.addEventListener('click', function(e) {
            if (e.target.closest('.toggle-btn')) {
                const btn = e.target.closest('.toggle-btn');
                const icon = btn.querySelector('i');
                icon.classList.toggle('bi-chevron-down');
                icon.classList.toggle('bi-chevron-up');
            }
        });

        // Insert key shortcut to add new supplier
        document.addEventListener('keydown', function(event) {
            if (event.keyCode === 45) window.location.href = "/supplier/new";
        });
    </script>

    <script>
        const searchInput = document.getElementById("searchInput");
        const suggestions = document.getElementById("suggestions");
        const searchForm = document.getElementById("searchForm");
        let timeout = null;

        // 🔍 Live search (fetch suggestions)
        searchInput.addEventListener("input", () => {
            clearTimeout(timeout);
            const query = searchInput.value.trim();

            if (!query) {
                suggestions.style.display = "none";
                suggestions.innerHTML = "";
                return;
            }

            timeout = setTimeout(async() => {
                try {
                    const res = await fetch(`/supplier/search?q=${encodeURIComponent(query)}`);
                    const data = await res.json();

                    if (!data.length) {
                        suggestions.innerHTML = `<li class="list-group-item text-muted">No results found</li>`;
                        suggestions.style.display = "block";
                        return;
                    }

                    // Function to highlight matching text
                    const highlight = (text) => {
                        if (!text) return "";
                        const regex = new RegExp(`(${query})`, "gi");
                        return text.replace(regex, `<mark>$1</mark>`);
                    };

                    suggestions.innerHTML = data
                        .map(
                            (s) => `
        <li class="list-group-item list-group-item-action"
            onclick="window.location.href='/supplier/${s._id}'">
          <strong>${highlight(s.supplierName)}</strong><br>
          <small class="text-muted">
            ${highlight(s.supplierCity)}, ${highlight(s.supplierState)}
          </small><br>
          <small class="text-secondary">${highlight(s.supplierItemCategory || '')}</small>
        </li>
      `
                        )
                        .join("");

                    suggestions.style.display = "block";
                } catch (err) {
                    console.error("Live search error:", err);
                }
            }, 300);
        });

        // Hide suggestions when clicking outside
        document.addEventListener("click", (e) => {
            if (!searchInput.contains(e.target) && !suggestions.contains(e.target)) {
                suggestions.style.display = "none";
            }
        });

        // Submit form normally for full search
        searchForm.addEventListener("submit", (e) => {
            if (!searchInput.value.trim()) e.preventDefault();
        });
    </script>

    <style>
        #suggestions li:hover {
            background-color: #f8f9fa;
            cursor: pointer;
        }
        
        mark {
            background-color: #ffed9b;
            padding: 0 2px;
            border-radius: 2px;
        }
    </style>