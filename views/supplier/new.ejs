<% layout('layout/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Add New Supplier</h1>
        <div class="col-6 offset-3">

            <form action="/supplier" novalidate method="POST" enctype="multipart/form-data">
                <label class="form-label mt-1" for="supplierName">Enter Supplier Name</label>
                <input class="form-control" type="text" id="supplierName" name="supplier[supplierName]">
                <label class="form-label mt-1" for="supplierCity">Enter Supplier City</label>
                <input class="form-control" type="text" id="supplierCity" name="supplier[supplierCity]">
                <label class="form-label mt-1" for="supplierState">Enter Supplier State</label>
                <input class="form-control" type="text" id="supplierState" name="supplier[supplierState]">
                <label class="form-label mt-1" for="supplierItemCategory">Enter Supplier Item Category</label>
                <select class="form-select form-select-lg" name="supplier[supplierItemCategory]" id="supplierItemCategory" required>
                            <option disabled selected>Select Item Category</option>
                            <% for(let category of itemCategories){%>

            <option>
                <%= category.itemCategoryName %>

            </option>

            <%} %>
