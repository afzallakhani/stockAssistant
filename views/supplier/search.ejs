<% layout('layout/boilerplate') %>

    <div class="container py-4">
        <div class="card shadow-sm border-0 rounded-4">
            <div class="card-body">
                <h3 class="fw-bold mb-3">
                    <%= supplier.supplierName %>
                </h3>

                <p class="text-muted mb-2">
                    <i class="bi bi-geo-alt"></i>
                    <%= supplier.supplierCity %>,
                        <%= supplier.supplierState %>
                </p>

                <ul class="list-group list-group-flush mb-3">
                    <li class="list-group-item"><strong>Category:</strong>
                        <%= supplier.supplierItemCategory || '-' %>
                    </li>
                    <li class="list-group-item"><strong>Phone:</strong>
                        <%= supplier.supplierPhone || '-' %>
                    </li>
                    <li class="list-group-item"><strong>Email:</strong>
                        <%= supplier.supplierEmail || '-' %>
                    </li>
                    <li class="list-group-item"><strong>GST:</strong>
                        <%= supplier.supplierGst || '-' %>
                    </li>
                </ul>

                <div class="d-flex justify-content-end">
                    <a href="/supplier/<%= supplier._id %>/edit" class="btn btn-outline-primary me-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <form action="/supplier/<%= supplier._id %>?_method=DELETE" method="post">
                        <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Delete this supplier?')">
            <i class="bi bi-trash"></i> Delete
          </button>
                    </form>
                </div>
            </div>
        </div>
    </div>